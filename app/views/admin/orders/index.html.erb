
             <!-- page title area start -->
            <div class="d-none d-lg-block page-title-area">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <div class="breadcrumbs-area clearfix">
                            <h4 class="page-title pull-left">All Orders</h4>
                            <ul class="breadcrumbs pull-left">
                                <li><%= link_to "Dashboard", admin_dashboard_index_path %></li>
                                <li><span>Orders</span></li>
                            </ul>
                        </div>
                    </div>
                    <%= render "shared/admin-userprofile" %>
                </div>
            </div>
            <!-- page title area end -->
            <div class="main-content-inner">
                <div class="row">
                    <!-- Progress Table start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title">Orders Table</h4>
                                <div class="single-table">
                                    <div class="table-responsive">
                                        <table class="table table-hover progress-table text-center">
                                            <thead class="text-uppercase">
                                                <tr>
                                                    <th scope="col">ID</th>
                                                    <th scope="col">Quantity</th>
                                                    <th scope="col">item name</th>
                                                    <th scope="col">Styles</th>
                                                    <th scope="col">Price</th>
                                                    <th scope="col">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% @orders.each do |item| %>
                                                    <tr>
                                                        <th scope="row"><%= item[:id] %></th>
                                                        <th><%= item[:line_items][0][:quantity] %></th>
                                                        <th><%= item[:line_items][0][:name] %></th>
                                                        <th>Hello</th>
                                                        <th>Hello</th>
                                                        <td>
                                                            <ul class="d-flex justify-content-center">
                                                                <li class="mr-3">
                                                                    <%= link_to edit_admin_product_path(item[:id]), class: "btn btn-link" do %>
                                                                        <i class="fa fa-edit"></i>
                                                                    <% end %>
                                                                </li>
                                                                <li>
                                                                    <%= button_to admin_product_path(item[:id]), class: "btn btn-link", method: :delete  do %>
                                                                        <i class="ti-trash"></i>
                                                                    <% end %>
                                                                </li>
                                                            </ul>
                                                        </td>
                                                    </tr>
                                                <% end %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Progress Table end -->
                </div>
            </div>