<%= form_with scope: :product, url: admin_products_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.hidden_field :version, value: current_page?(new_admin_product_path) ? "" : product[:version].to_s %>
  </div>
  <div class="form-group">
    <%= form.label :name, for: "InputName" %>
    <%= form.text_field :name, class: "form-control", id:"InputName", aria_describedby: "nameHelp", value: current_page?(new_admin_product_path) ? "" : product[:item_data][:name].to_s %>
  </div>
  <div class="form-group">
    <%= form.label :description, for: "InputDescription" %>
    <%= form.text_field :description, class: "form-control", id:"InputDescription", aria_describedby: "descriptionHelp", value: current_page?(new_admin_product_path) ? "" : product[:item_data][:description].to_s %>
  </div>
  <div class="form-group">
    <%= form.label :price, for: "InputPrice" %>
    <%= form.number_field :amount, class: "form-control", id: "example-number-input", value: current_page?(new_admin_product_path) ? "" : product[:item_data][:variations][0][:item_variation_data][:price_money][:amount] %>
  </div>
  <%= form.submit(current_page?(new_admin_product_path) ? "Create New Product" : " Edit Product", class: "btn btn-primary mt-4 pr-4 pl-4") %>
<% end %>