<%= form_with scope: :product, url: admin_products_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= @product[:version].to_s %>
    <%= form.hidden_field :version, value: @product[:version].to_s %>
  </div>
  <div class="form-group">
    <%= form.label :name, for: "InputName" %>
    <%= form.text_field :name, class: "form-control", id:"InputName", aria_describedby: "nameHelp", value: @product[:name].to_s %>
  </div>
  <div class="form-group">
    <%= form.label :description, for: "InputDescription" %>
    <%= form.text_field :description, class: "form-control", id:"InputDescription", aria_describedby: "descriptionHelp", placeholder: "Enter Product Description" %>
  </div>
  <div class="form-group">
    <%= form.label :price, for: "InputPrice" %>
    <%= form.number_field :amount, class: "form-control", id: "example-number-input" %>
  </div>
  <%= form.submit "Create New Product", class: "btn btn-primary mt-4 pr-4 pl-4" %>
<% end %>