<%= form_with(url: admin_products_path, method: :post, local: true) do |form| %>

  <%= form.hidden_field :idempotency_key, value: "" %>
  <div class="form-group">
    <%= form.label :id, for: "InputId" %>
    <%= form.select :id, options_for_product_id, {}, { :class => 'custom-select', :value => "shoes"} %>
  </div>
  <div class="form-group">
    <%= form.label :name, for: "InputName" %>
    <%= form.text_field :name, value: @catalog[:item_data][:name], class: "form-control", id:"InputName", aria_describedby: "nameHelp", placeholder: "Enter Product Name" %>
  </div>
  <div class="form-group">
    <%= form.label :description, for: "InputDescription" %>
    <%= form.text_field :description, value: @catalog[:item_data][:description], class: "form-control", id:"InputDescription", aria_describedby: "descriptionHelp", placeholder: "Enter Product Description" %>
  </div>
  <div class="form-group">
    <%= form.label :price, for: "InputDescription" %>
    <%= form.number_field :price_amount, value: @catalog[:item_data][:variations][0][:item_variation_data][:price_money][:amount], class: "form-control", id: "example-number-input" %>
  </div>
  <%= form.submit(current_page?(new_admin_product_path) ? "Create New Product" : " Edit Product", class: "btn btn-primary mt-4 pr-4 pl-4") %>
<% end %>