 <!-- page title area start -->
            <div class="d-none d-lg-block page-title-area">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <div class="breadcrumbs-area clearfix">
                            <h4 class="page-title pull-left">Add Product</h4>
                            <ul class="breadcrumbs pull-left">
                                <li><%= link_to "Dashboard", admin_dashboard_index_path %></li>
                                <li><span>Add New Product</span></li>
                            </ul>
                        </div>
                    </div>
                    <%= render "shared/admin-userprofile" %>
                </div>
            </div>
            <!-- page title area end -->
            <div class="main-content-inner">
                <div class="col-lg-6 col-ml-12">
                    <div class="row">
                        <!-- basic form start -->
                        <div class="col-12 mt-5">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="header-title">Basic form</h4>
                                        <%= form_with(url: admin_products_path, method: :post, local: true) do |form| %>

                                            <div class="form-group">
                                                <%= form.label :id, for: "InputId" %>
                                                <%= form.select :id, options_for_product_id, {}, { :class => 'custom-select'} %>
                                            </div>
                                            <div class="form-group">
                                                <%= form.label :name, for: "InputName" %>
                                                <%= form.text_field :name, class: "form-control", id:"InputName", aria_describedby: "nameHelp", placeholder: "Enter Product Name" %>
                                            </div>
                                            <div class="form-group">
                                                <%= form.label :description, for: "InputDescription" %>
                                                <%= form.text_field :description, class: "form-control", id:"InputDescription", aria_describedby: "descriptionHelp", placeholder: "Enter Product Description" %>
                                            </div>
                                            <div class="form-group">
                                                <%= form.label :price, for: "InputDescription" %>
                                                <%= form.number_field :price_amount, class: "form-control", id: "example-number-input" %>
                                            </div>
                                            <%= form.submit "Create New Product", class: "btn btn-primary mt-4 pr-4 pl-4" %>
                                        <% end %>
                                    </div>
                                </div>
                        </div>
                        <!-- basic form end -->
                    </div>
                </div>
            </div>