<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div id="items">
  <% @items.each do |item| %>
    <%= item[:id] %> <br>
    <%= item[:item_data][:name] %> <br>
    $<%= item[:item_data][:variations][0][:item_variation_data][:price_money][:amount] %>
    <p>
      <%= link_to "Show this item", item_path(item[:id]) %>
    </p>
  <% end %>
</div>

<%= link_to "New item", new_item_path %>
